@using BookStore2019.Services
@using ValuesObject
@{
    ChuDeService chuDeService = new ChuDeService();
    var listCate = chuDeService.GetAllByParentName("chu-de-sach");
    var listCateDD = chuDeService.GetAllByParentName("do-dung-hoc-tap");
}
<div class="back-to-top">
    <button type="button" class="btn btn-dark scrolltop" id="goTop" style="bottom:50px;">
        <i class="fas fa-chevron-up scroll"></i>
    </button>
</div>
<div class="header">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="search col-8">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-inline" }))
                    {
                        <input type="text" name="Search" id="Search" placeholder="Tìn kiếm" class="form-control " />
                        <button type="submit" id="btnSearch" name="btnSearch" value="Go" class="btn btn-success">Go</button>
                    }
                    @*<form class="form-inline" id="form-search"></form>*@
                </div>

                <div class="header-right col-4">
                    <ul>
                        @if (Session["Account"] != null)
                        {
                            OAccount account = (OAccount)Session["Account"];
                            <li><a href="@Url.Action("Info", "Account")">@account.UserName</a></li>
                            <li><a href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login","Account")">Đăng nhập</a></li>
                            <li><a href="@Url.Action("Register","Account")">Đăng ký</a></li>
                        }

                        <li><a href="@Url.Action("Cart","Sach")"><i class="fas fa-cart-plus"></i></a></li>
                    </ul>
                    <button type="button" class="navbar-toggle d-lg-none btnMenu" data-toggle="collapse" data-target=".h-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="fas fa-bars"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="head-top">
        <div class="container">
            <div class="logo">
                <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Images/logo1.png")" class="" /></a>
            </div>
            <div class="h-menu collapse navbar-collapse ">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index","Home")" class="hover-pa">Trang chủ</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About","Home")" class="hover-pa">Giới thiệu</a>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("GetAll","Sach")" class="hover-pa">Sách</a>
                        <ul class="dropdown-menu" role="menu">
                            @if (listCate.Count > 0 && listCate != null)
                            {
                                foreach (var item in listCate)
                                {
                                    <li class="">
                                        <a href="@Url.Action("GetByCate","Sach",new { id=item.MaChuDe})" class="item-li">@item.Ten</a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("GetAll","SanPham")" class="hover-pa">Đồ dùng học tập</a>
                        <ul class="dropdown-menu" role="menu">
                            @if (listCateDD.Count > 0 && listCateDD != null)
                            {
                                foreach (var item in listCateDD)
                                {
                                    <li class="">
                                        <a href="@Url.Action("GetByCate","Sach",new { id=item.MaChuDe})" class="item-li">@item.Ten</a>
                                    </li>
                                }
                            }

                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("GetAll","TinTuc")" class="hover-pa">Tin tức</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact","Home")" class="hover-pa">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>


