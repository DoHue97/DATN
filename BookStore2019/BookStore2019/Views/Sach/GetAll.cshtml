@using ValuesObject
@using PagedList.Mvc
@using BookStore2019.Services
@using BookStore2019.Help
@using BookStore2019.Models
@model List<OSach>
@{
    
    ViewBag.Title = "GetAll";
    
    ChuDeService chuDeService = new ChuDeService();
    var listCate = chuDeService.GetAllActive();

    Pager pager = ViewBag.Pager;
}
<div class="product content-top">
    <div class="container">
        <div class="row">
            @Html.Partial("Categories")

            <div class="col-12 col-sm-9 all-pro">
                @if (Model.Count > 0 && Model != null)
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            if (i % 4 == 0)
                            {
                                <div class="col-12 col-sm-6 col-md-3 col-sm-3 img_item">
                                    <a href="@Url.Action("Detail","Sach",new { shortname=item.TenVanTat})" title="@item.TenSach">
                                        <img src="@Url.Content(item.Anh)" alt="Alternate Text" class="img-fluid" />
                                    </a>
                                    <div class="info_item">
                                        <h3>@Helper.CutText(item.TenSach)</h3>

                                        <button type="button" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i>
                                            @String.Format("{0:#,##0.##}", item.GiaBan) VND
                                        </button>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            }
                            else
                            {
                                <div class="col-12 col-sm-6 col-md-3 col-sm-3 img_item">
                                    <a href="@Url.Action("Detail","Sach",new { shortname=item.TenVanTat})" title="@item.TenSach">
                                        <img src="@Url.Content(item.Anh)" alt="Alternate Text" class="img-fluid" />
                                    </a>
                                    <div class="info_item">
                                        <h3>@Helper.CutText(item.TenSach)</h3>

                                        <button type="button" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i>
                                            @String.Format("{0:#,##0.##}", item.GiaBan) VND
                                        </button>
                                    </div>
                                </div>
                            }
                            i++;
                        }
                    }
                    else
                    {
                        <div>
                            <p>Đang cập nhật dữ liệu</p>
                        </div>
                    }
                <div class="clearfix"></div>
                <div class="trang">
                    <div class="pagination">
                        <ul class="pagination">
                            @if (pager.HasPreviousPage)
                            {
                                <li>
                                    @Html.ActionLink("<<", "GetAll", new { page = pager.FirstPageIndex })
                                </li>
                                <li>
                                    @Html.ActionLink("<", "GetAll", new { page = pager.PreviousPageIndex })
                                </li>


                            }

                            @foreach (int page in ViewBag.Pager)
                            {
                                <li class="@((pager.CurrentPageIndex==page)?"active":"")">
                                    @Html.ActionLink(page.ToString(), "GetAll", new { page = page })
                                </li>

                            }

                            @if (pager.HasNextPage)
                            {
                                <li>
                                    @Html.ActionLink(">", "GetAll", new { page = pager.NextPageIndex })
                                </li>
                                <li>
                                    @Html.ActionLink(">>", "GetALl", new { page = pager.LastPageIndex })
                                </li>


                            }
                        </ul>


                    </div>

                </div>
            </div>


        </div>
    </div>
</div>
<script>
    setAdminCurrentUrl('@Url.Action("GetAll", "Sach")', '@Url.Action("GetAll", "Sach")');
</script>