    <script type="text/javascript">

        function setAdminCurrentUrl(url) {

            $('.nav-list a[href="' + url + '"]').each(function () {
                $(this).closest('li').addClass('active');
                $(this).closest('li').closest('ul').closest('li').addClass('active open');
            });
        }

    </script>

