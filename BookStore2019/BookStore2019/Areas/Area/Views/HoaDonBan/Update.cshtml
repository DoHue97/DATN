@using BookStore2019.Services
@using ValuesObject
@model OHoaDonBan
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Area/Views/Shared/_Layout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li><a href="@Url.Action("Index", "Default")">Dashboard</a></li>
            <li><a href="@Url.Action("Search", "HoaDonBan")">Danh sách đơn hàng</a></li>
            @if (ViewBag.IsEdit != null && ViewBag.IsEdit == true)
            {
                <li class="active">Edit @Model.MaHDB</li>
            }
            else
            {
                <li class="active">Tạo mới  hóa đơn bán </li>
            }
        </ul>

    </div>

    <div class="page-content">


        <div class="page-header">

            @if (ViewBag.IsEdit != null && ViewBag.IsEdit == true)
            {
                <h1>
                    Sửa  hóa đơn bán id @Model.MaHDB

                </h1>
            }
            else
            {
                <h1>
                    Tạo mới  hóa đơn bán

                </h1>
            }

        </div>
        <!-- /.page-header -->
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "manageForm", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewBag.IsEdit != null && ViewBag.IsEdit == true)
                            {
                                @Html.HiddenFor(mbox => mbox.MaHDB)
                            }
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="HtmlPageTitle">Ngày giao hàng:</label>
                            <div class="col-xs-12 col-sm-10">
                                <input type="date" name="NgayGiao" id="NgayGiao" value="@Model.NgayGiao" />
                            </div>
                        </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-2 no-padding-right" for="HtmlPageTitle">Trạng thái:</label>
                                <div class="col-xs-12 col-sm-10">
                                    <select id="TrangThai" name="TrangThai">
                                        <option value="0">Chưa giao</option>
                                        <option value="1">Đang giao</option>
                                        <option value="2">Đã giao</option>
                                    </select>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-success" value="Lưu" />
                        }
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
<script type="text/javascript">
    $('textarea[class*=autosize]').autosize({ append: "\n" });
    $('textarea.limited').inputlimiter({
        remText: '%n character%s remaining...',
        limitText: 'max allowed : %n.'
    });
</script>

<script type="text/javascript">
    setAdminCurrentUrl('@Url.Action("Update", "HoaDonBan")');
</script>

<style type="text/css">


    .pick-a-color-markup {
        margin: 0px 0px;
    }
</style>